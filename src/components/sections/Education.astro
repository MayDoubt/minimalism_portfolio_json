---
import { education } from "@cv";
import Section from "../Section.astro";
---

<Section title="EducaciÃ³n" animationDelay="3">
  <ul>
    {
      education.map(
        ({ institution, url, startDate, endDate, area, courses }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate !== null ? new Date(endDate).getFullYear() : "Presente";
          const years = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution}</h3>
                    <h4>{area}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  <p>{courses}</p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    font-size: 1.05rem;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.5;
    color: #222;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    font-size: 0.8rem;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 120px;
    text-align: right;
  }

  @media (max-width: 600px) {
    header {
      flex-direction: column;
      align-items: flex-start;
    }
    time {
      text-align: left;
    }
  }
</style>
