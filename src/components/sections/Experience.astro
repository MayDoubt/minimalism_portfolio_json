---
import { work } from "@cv";
import Section from "../Section.astro";
---

<Section title="Experiencia Laboral" animationDelay="2">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate !== null ? new Date(endDate).getFullYear() : "Presente";
          const years = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  <p>{summary}</p>
                  <h5>Principales aportaciones:</h5>
                  <ul>
                    {highlights.map((highlight) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    font-size: 1.05rem;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.5;
    color: #222;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    font-size: 0.8rem;
  }

  footer h5 {
    margin-bottom: 0.5rem;
  }

  footer ul {
    padding-left: 1rem;
    list-style-type: "â€¢ ";
    font-size: 0.8rem;
    color: #666;
    line-height: 1.5;
    gap: 0.7rem;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 120px;
    text-align: right;
  }

  @media (max-width: 600px) {
    header {
      flex-direction: column;
      align-items: flex-start;
    }
    time {
      text-align: left;
    }
  }
</style>
