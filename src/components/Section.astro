---
const { title, animationDelay } = Astro.props;
---

<section
  style={`opacity: 0; animation: fadeIn .8s ease-out forwards; animation-delay: ${animationDelay * 200}ms;`}
>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 32px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
</style>
